<!DOCTYPE html>
<html>
<head>
  <meta charset='utf-8'>
  <script src='braintree.js'></script>
  <script src='dropin.js'></script>
  <script src='jquery-2.1.0.js'></script>
</head>
<body>
  <form action='/credit_cards' method='post'>
    <div id='checkout'></div>
    <input id='submit' type='submit'>
  </div>

  <script>
    jQuery(function() {
      var token = <%= @token.to_json %>;
      braintree.dropin.create({
        authorization: token,
        containere: '#checkout'
      });
    });
  </script>
</body>
</html>
